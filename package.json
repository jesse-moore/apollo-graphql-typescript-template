{
  "name": "apollo-graphql-typescript-template",
  "version": "1.0.0",
  "description": "Template for Typscript Apollo server",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"nodemon --exec ts-node src/index.ts\" \"npm:codegen-watch\"",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen-watch": "graphql-codegen --config codegen.yml --watch",
    "test": "nyc --reporter=text mocha -r ts-node/register '__tests__/unit/**/*.test.ts'",
    "test2": "nyc --reporter=lcovonly mocha -r ts-node/register '__tests__/unit/**/*.test.ts'",
    "test3": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesse-moore/apollo-graphql-typescript-template.git"
  },
  "author": "Jesse Moore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jesse-moore/apollo-graphql-typescript-template/issues"
  },
  "homepage": "https://github.com/jesse-moore/apollo-graphql-typescript-template#readme",
  "dependencies": {
    "@graphql-tools/schema": "^8.2.0",
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "^8.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.1.2",
    "@graphql-codegen/typescript-resolvers": "^2.1.2",
    "@types/chai": "^4.2.21",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chai": "^4.3.4",
    "codecov": "^3.8.3",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    }
  }
}
